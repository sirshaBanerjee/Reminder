<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/fragment_add_event_etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Name" />

    <EditText
        android:id="@+id/fragment_add_event_etTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="00.00" />

    <EditText
        android:id="@+id/fragment_add_event_etDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="19/02/2018" />

    <EditText
        android:id="@+id/fragment_add_event_etRepeatMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeat : Shuffle" />

    <Button
        android:id="@+id/fragment_add_btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"/>

</LinearLayout>